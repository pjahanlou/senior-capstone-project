<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Platinum"
    tools:context=".Datatable">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="100dp">

        <include layout="@layout/activity_bottom_view_journal" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/timeLineDisplayGraph"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <View
                android:layout_height="3dp"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.87"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timeLineDisplayGraph"
                android:background="@color/purple_500"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/showGraphMonth"
                />

            <Button
                android:id="@+id/showGraphYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cancel_button"
                android:text="1Y"
                android:textSize="18dp"
                android:stateListAnimator="@null"
                android:textColor="@color/purple_500"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toStartOf="@id/showGraphMonth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timeLineDisplayGraph" />

            <Button
                android:id="@+id/showGraphMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cancel_button"
                android:text="1M"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:stateListAnimator="@null"
                android:textColor="@color/purple_500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timeLineDisplayGraph" />

            <Button
                android:id="@+id/showGraphWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cancel_button"
                android:text="1W"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:stateListAnimator="@null"
                android:textColor="@color/purple_500"
                app:layout_constraintStart_toEndOf="@id/showGraphMonth"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timeLineDisplayGraph" />


</androidx.constraintlayout.widget.ConstraintLayout>


