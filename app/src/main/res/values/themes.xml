<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SeizureDetectionApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/ButtonLowercase</item>
        <item name="android:textColorHint">@style/HintColor</item>
    </style>

    <style name="ButtonLowercase" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HintColor" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/DarkGray</item>
    </style>

    <style name="threeDotImageView" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:color">@color/black</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="datepicker_theme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:colorAccent">@color/purple_500</item>                   <!--header background-->
        <item name="android:windowBackground">@color/LightSteelBlue</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/purple_500</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/purple_500</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/purple_500</item>    <!--days of the week-->
    </style>

    <style name="addjournal_datepicker_theme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:colorAccent">@color/DarkOrange</item>                   <!--header background-->
        <item name="android:windowBackground">@color/Platinum</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/DarkOrange</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/DarkOrange</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/DarkOrange</item>    <!--days of the week-->
    </style>

    <style name="addjournal_timepicker_theme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">@color/DarkOrange</item>
        <item name="android:headerBackground">@color/Platinum</item>
        <item name="android:numbersTextColor">@color/DarkOrange</item>
        <item name="android:numbersSelectorColor">@color/DarkOrange</item>
        <item name="android:numbersBackgroundColor">@color/DarkOrange</item>
        <item name="android:amPmTextColor">?android:attr/textColorSecondary</item>
    </style>
</resources>