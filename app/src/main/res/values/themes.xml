<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SeizureDetectionApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/ButtonLowercase</item>
        <item name="android:textColorHint">@style/HintColor</item>
    </style>

    <style name="ButtonLowercase" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HintColor" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/DarkGray</item>
    </style>

    <style name="threeDotImageView" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:color">@color/black</item>
        <item name="android:tint">@color/black</item>
    </style>
</resources>