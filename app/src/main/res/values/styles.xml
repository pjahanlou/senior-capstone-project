<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="AppThemeNavbar" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/DarkOrange</item>
        <item name="colorPrimaryDark">@color/Platinum</item>
        <item name="colorAccent">@color/Platinum</item>
        <item name="colorControlNormal">@color/Platinum</item>
        <item name="android:textColorPrimary">@color/Platinum</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="NumberPicker" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
        <item name="android:textColorPrimary">@color/black</item>
        <item name="backgroundColor">@color/Platinum</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>