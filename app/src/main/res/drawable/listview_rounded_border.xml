<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorPrimaryDark">
    <!-- color for listview rows, experiment with different colors
    <solid android:color="@color/SteelBlue"/>
    <corners android:radius="10dp"/>
    <padding android:left="3dp" android:bottom="3dp" android:right="3dp" android:top="3dp" />
    <stroke android:width="1dp" android:color="@color/black"/>
    -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark" />
            <corners android:radius="10dp" />
            <padding android:left="3dp" android:bottom="3dp" android:right="3dp" android:top="3dp" />
            <stroke android:width="1dp" android:color="@color/black"/>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#FFFFFF"
                android:startColor="#CCCCCC"
                android:type="linear" />
            <corners android:radius="10dp" />
            <padding android:left="3dp" android:bottom="3dp" android:right="3dp" android:top="3dp" />
            <stroke android:width="0dp" android:color="@color/black"/>
        </shape>
    </item>
</ripple>