<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
android:color="@color/colorPrimaryDark">
    <item>
        <layer-list>
            <item android:id="@android:id/mask" android:top="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/Platinum" />
                    <corners android:topLeftRadius="35dp" android:topRightRadius="35dp"/>
                    <stroke android:width="2dp" android:color="#D6D6D6" />
                </shape>
            </item>

            <item android:id="@android:id/background"
                android:top="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:endColor="@color/Platinum"
                        android:startColor="@color/Platinum"
                        android:type="linear" />
                    <corners android:topLeftRadius="35dp" android:topRightRadius="35dp"/>
                    <stroke android:width="1dp" android:color="#FFDDDDDD" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>